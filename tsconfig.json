{
  "compilerOptions": {
    "outDir": "./dist/es6",
    "module": "es6",
    "target": "es6",
    "allowJs": true,
    "jsx": "react",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": false,
    "skipLibCheck": true,
    "noImplicitAny": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["node_modules"]
}